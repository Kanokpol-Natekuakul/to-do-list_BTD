<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-6">
    <div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-4">To-Do List</h1>

        <form action="/" method="POST" class="mb-4">
            <div class="flex">
                <input type="text" name="newTodo" placeholder="Add a new task" class="flex-1 p-2 border border-gray-300 rounded-l-lg">
                <button type="submit" class="bg-blue-500 text-white p-2 rounded-r-lg">Add</button>
            </div>
        </form>

        <ul class="list-disc pl-5">
            <% todos.forEach(function(todo) { %>
                <li class="mb-2 flex justify-between items-center">
                    <span><%= todo.task %></span>
                    
                    <!-- Edit Task Form -->
                    <form action="/edit" method="POST" class="inline">
                        <input type="hidden" name="todoId" value="<%= todo.id %>">
                        <input type="text" name="newTask" value="<%= todo.task %>" class="p-1 border border-gray-300 rounded">
                        <!-- <button type="submit" class="bg-yellow-500 text-white p-1 rounded">Edit</button> -->
                    </form>

                    <!-- Status Dropdown -->
                    <form action="/update-status" method="POST" class="inline ml-2">
                        <input type="hidden" name="todoId" value="<%= todo.id %>">
                        <select name="status" class="p-1 border border-gray-300 rounded">
                            <!-- <option value="Not Started" <%= todo.status === 'Not Started' ? 'selected' : '' %>>Not Started</option> -->
                            <option value="In Progress" <%= todo.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                            <option value="Completed" <%= todo.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                        </select>
                        <!-- <button type="submit" class="bg-green-500 text-white p-1 rounded">Update Status</button> -->
                    </form>

                    <!-- Delete Task Form -->
                    <form action="/delete" method="POST" class="inline ml-2">
                        <input type="hidden" name="todoId" value="<%= todo.id %>">
                        <button type="submit" class="bg-red-500 text-white p-1 rounded">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
